<Window x:Class="Client.OtherWindows.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UserWindow" Height="251" Width="322">
    <Grid HorizontalAlignment="Left" Width="300">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="66*"/>
            <ColumnDefinition Width="77*"/>
        </Grid.ColumnDefinitions>

        <TextBox Name="TextBox_Name" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="2"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="42"/>
        <TextBox Name="TextBox_Surname" HorizontalAlignment="Left" Height="23" Margin="10,67,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="2"/>
        <Label Content="Surname" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="57"/>
        <TextBox Name="TextBox_PhoneNumber" HorizontalAlignment="Left" Height="23" Margin="10,98,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="2"/>
        <Label Content="PhoneNumber" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="96"/>
        <TextBox Name="TextBox_Email" HorizontalAlignment="Left" Height="23" Margin="10,129,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="2"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="10,126,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="38"/>
        <Button Name="Button_Correct"  Content="Correct" Grid.Column="1" HorizontalAlignment="Left" Margin="107,174,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2" Click="Button_Correct_Click"/>
        <Button Name="Button_Add" Content="Add" HorizontalAlignment="Right" Margin="0,174,24,0" VerticalAlignment="Top" Width="75" Grid.Column="2" Height="22" Click="Button_Add_Click"/>
    </Grid>
</Window>
